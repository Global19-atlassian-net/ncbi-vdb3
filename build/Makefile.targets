# defines make targets commonly used in non-leaf directories:
#   build
#   clean
#   test
#
# requires $(SUBDIRS) to be defined
#
# to control which subdirectories are affected by a specific target, define
# SUBDIRS_CLEAN, SUBDIRS_RUNTESTS, etc., like this:
#   SUBDIRS_CLEAN = $(addsuffix _clean, dir1 dir2 dir3)
#

default: $(SUBDIRS)

#-------------------------------------------------------------------------------
# build
#
SUBDIRS_BUILD ?= $(addsuffix _build,$(SUBDIRS))

build: $(SUBDIRS_BUILD)

$(SUBDIRS_BUILD):
	@ $(MAKE) -C $(subst _build,,$@) build

.PHONY: all $(SUBDIRS_BUILD)

#-------------------------------------------------------------------------------
# clean
#
SUBDIRS_CLEAN ?= $(addsuffix _clean,$(SUBDIRS))

clean: $(SUBDIRS_CLEAN)

$(SUBDIRS_CLEAN):
	@ $(MAKE) -s -C $(subst _clean,,$@) clean

.PHONY: clean $(SUBDIRS_CLEAN)

#-------------------------------------------------------------------------------
# test
#
SUBDIRS_TEST ?= $(addsuffix _test,$(SUBDIRS))

test: build $(SUBDIRS_TEST)

$(SUBDIRS_TEST):
	@ $(MAKE) -s -C $(subst _test,,$@) test

.PHONY: test $(SUBDIRS_TEST)
